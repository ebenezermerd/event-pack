# API URL - Update this with your backend URL
NEXT_PUBLIC_API_URL=http://localhost:3000

# Authentication
NEXT_PUBLIC_JWT_EXPIRATION=1d

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=5 # In MB
NEXT_PUBLIC_UPLOAD_URL=/api/upload

# Application
NEXT_PUBLIC_APP_NAME=EventEase
NEXT_PUBLIC_APP_DESCRIPTION="Event Management Platform for Ethiopia"

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_S3_BUCKET=eventease-uploads

# Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Chapa Payment Gateway (Ethiopia)
CHAPA_SECRET_KEY=CHASECK_TEST-your_chapa_secret_key
CHAPA_PUBLIC_KEY=CHAPUBK_TEST-your_chapa_public_key

# Caching
REDIS_URL=redis://localhost:6379 